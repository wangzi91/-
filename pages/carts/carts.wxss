.stylecart{
  display: flex;
  justify-content: center;
  align-items: center
}
.container {
  min-height: 100%;
  padding: 20rpx 0rpx;
}

.touch-item {
 font-size: 14px;
 display: flex;
 justify-content: space-between;
 width: 100%;
 overflow: hidden;
 background-color: white;
 margin-bottom: 12rpx
}
.content {
 width: 100%;
padding-left: 20rpx;
padding-right: 20rpx;
padding-top: 20rpx;
padding-bottom: 20rpx;
 /* line-height: 22px; */
 margin-right:0;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 margin-left: -90px;
 display: flex;
 flex-direction: row;
 align-items: center;
 justify-content: space-between
 
}
.del {
 background-color: orangered;
 width: 90px;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
 color: #fff;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
 -webkit-transform: translateX(0);
 transform: translateX(0);
}
