/* pages/home/home.wxss */

page {
  overflow: hidden;
  background-color: white;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.classify-class {
  display: flex;
  flex-direction: column;
}

.classify-class .header-class {
  background: #5677fc;
  z-index: 1000;
  position: fixed;
  width: 100%;
}

.classify-class .header-search {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  border-radius: 10rpx;
  justify-content: center;
  margin: 20rpx;
  padding: 10rpx;
}

.header-search image {
  width: 40rpx;
  height: 40rpx;
}

.header-search text {
  font-size: 28rpx;
  color: lightgray;
}

.classify-class .content-class {
  position: fixed;
  width: 100%;
  margin-top: 100rpx;
}

.content-class .content-contain {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.nav-left {
  border-right: #e0e0e0 1rpx solid;
}

.content-contain .nav-left {
  display: flex;
  flex-direction: column;
  background: white;
  width: 20%;
}

.nav-left .left-item- {
  font-size: 28rpx;
  color: #202020;
  background: white;
  padding: 20rpx;
  text-align: center;
  border-bottom: 2rpx solid white;
}

.nav-left .left-item-activie {
  font-size: 28rpx;
  color: #26b13c;
  background: white;
  padding: 20rpx;
  text-align: center;
  border-bottom: 2rpx solid white;
}

.content-contain .nav-right {
  width: 80%;
  display: flex;
  flex-direction: column;
}

.nav-right {
  padding-top: 34rpx;
}

.nav-right .title {
  /* font-weight: bold; */
  font-size: 32rpx;
  color: #202020;

}

.nav-right .classify-item {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.classify-item .item {
  display: flex;
  flex-direction: column;
  width: 33.3%;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  height: 192rpx;

}

.classify-item .hoverclass {
  background: #f9f9f9;
}

.item image {
  width: 144rpx;
  height: 144rpx;
}

.item .name {
  font-size: 24rpx;
  color: #6c6c6c;

  width: 150rpx;

  margin-top: 20rpx;
  text-align: center;
}

.c-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 45rpx;
  width: 90%;
  border-bottom: 1rpx solid #e0e0e0;
margin: 0 auto
}

.index-sm-more {
  display: flex;
  font-size: 24rpx;
  color: #999;
  height: 46rpx;

}

.more {
  width: 16rpx;
  height: 25rpx;
  float: left;
  margin-top: 4rpx;
  margin-left: 10rpx;
}

.more image {
  width: 100%;
  height: 100%;
}
